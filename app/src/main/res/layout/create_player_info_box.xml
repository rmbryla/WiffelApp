<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/common_dimen_16"

        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/create_player_info_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_16"
        android:layout_marginStart="@dimen/common_dimen_16"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <main.wiffelapp.UI.IncrementerDecrementer
        android:id="@+id/info_incrementer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_16"
        android:layout_marginEnd="@dimen/common_dimen_16"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/create_player_info_done"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/common_dimen_16"
        android:layout_marginEnd="@dimen/common_dimen_16"
        app:layout_constraintTop_toBottomOf="@id/create_player_info_spinner"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>