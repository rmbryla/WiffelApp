<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/team_name_create_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEAM NAME"
        android:layout_marginTop="@dimen/common_dimen_20"
        android:layout_marginRight="@dimen/common_dimen_16"
        android:layout_marginLeft="@dimen/common_dimen_16"
        android:textSize="@dimen/font_size_20"

        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/batting_order_create_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp"

        app:layout_constraintBottom_toBottomOf="@+id/add_player_button"
        app:layout_constraintTop_toBottomOf="@+id/team_name_create_screen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/create_batting_order_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/add_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dimen_16"
        android:layout_marginRight="@dimen/common_dimen_16"
        android:text="New Player"
        android:textAllCaps="false"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/create_team_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dimen_16"
        android:layout_marginLeft="@dimen/common_dimen_16"
        android:text="Done"
        android:textAllCaps="false"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</android.support.constraint.ConstraintLayout>