<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/league_label"
        android:text="League"
        android:textSize="@dimen/font_size_20"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/common_dimen_16"
        app:layout_goneMarginTop="60dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/league_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/common_dimen_16"
        android:textSize="@dimen/font_size_20"
        app:layout_constraintTop_toBottomOf="@+id/league_label"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/common_dimen_16"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="8dp"
        android:paddingTop="30dp"
        android:text="Password"
        android:textSize="@dimen/font_size_20"
        app:layout_constraintTop_toBottomOf="@id/league_input"
        tools:layout_editor_absoluteX="16dp" />


    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/common_dimen_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_size_20"
        app:layout_constraintTop_toBottomOf="@+id/password_label"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/common_dimen_16"
        android:text="Login"

        app:layout_constraintTop_toBottomOf="@id/password_input"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</android.support.constraint.ConstraintLayout>