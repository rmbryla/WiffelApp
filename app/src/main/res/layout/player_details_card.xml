<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/player_details_player_name_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NAME"
                android:textSize="@dimen/font_size_16"
                />


            <TextView
                android:id="@+id/player_details_singles_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="S : -1"
                android:textSize="@dimen/font_size_16"
                />

            <TextView
                android:id="@+id/player_details_triples_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="T : -1"
                android:textSize="@dimen/font_size_16"
                />


            <TextView
                android:id="@+id/player_details_grand_slams_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="GS : -1"
                android:textSize="@dimen/font_size_16"
                />


            <TextView
                android:id="@+id/player_details_squantos_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="SQ : -1"
                android:textSize="@dimen/font_size_16"
                />


            <TextView
                android:id="@+id/player_details_rbis_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="RBIs : -1"
                android:textSize="@dimen/font_size_16"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/player_details_player_number_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NUM"
                android:textSize="@dimen/font_size_16"
                />

            <TextView
                android:id="@+id/player_details_doubles_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="D : -1"
                android:textSize="@dimen/font_size_16"
                />



            <TextView
                android:id="@+id/player_details_home_runs_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="HR : -1"
                android:textSize="@dimen/font_size_16"
                />



            <TextView
                android:id="@+id/player_details_ground_roll_doubles_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="GRD : -1"
                android:textSize="@dimen/font_size_16"
                />



            <TextView
                android:id="@+id/player_details_outs_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="O : -1"
                android:textSize="@dimen/font_size_16"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray">

    </View>


</android.support.constraint.ConstraintLayout>