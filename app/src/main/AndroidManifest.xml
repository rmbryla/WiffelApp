<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="main.wiffelapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.signIn.SignInActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".UI.GameSelect.GameSelectActivity"></activity>

        <activity android:name=".UI.NewGame.NewGameActivity"></activity>

        <activity android:name=".UI.CreateTeam.CreateTeamActivity"></activity>

        <activity android:name=".UI.CreatePlayer.CreatePlayerActivity"></activity>

        <activity android:name=".UI.ConfirmGame.ConfirmGameActivity"></activity>

        <activity android:name=".UI.AtBat.AtBatActivity"></activity>

        <activity android:name=".UI.GameStats.GameStatsActivity"></activity>
    </application>

</manifest>